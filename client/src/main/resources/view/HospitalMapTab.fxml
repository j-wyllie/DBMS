<?xml version="1.0" encoding="UTF-8"?>

<?import com.lynden.gmapsfx.GoogleMapView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane prefHeight="600.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8.0.151" xmlns:fx="http://javafx.com/fxml/1" fx:controller="odms.view.user.HospitalMap">
    <GridPane AnchorPane.bottomAnchor="-1.0" AnchorPane.leftAnchor="-1.0"
        AnchorPane.rightAnchor="-1.0" AnchorPane.topAnchor="-1.0">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308"/>
            <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308"/>
            <ColumnConstraints hgrow="NEVER" maxWidth="-Infinity" minWidth="-Infinity"
                prefWidth="250.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints maxHeight="1.7976931348623157E308" vgrow="ALWAYS"/>
            <RowConstraints maxHeight="1.7976931348623157E308" vgrow="ALWAYS"/>
            <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="NEVER"/>
        </rowConstraints>
        <TextArea fx:id="travelInfo" maxHeight="1.7976931348623157E308"
            maxWidth="1.7976931348623157E308" GridPane.columnIndex="2" GridPane.rowIndex="1"
            GridPane.rowSpan="2"/>
        <GoogleMapView fx:id="mapView" maxHeight="1.7976931348623157E308"
            maxWidth="1.7976931348623157E308" GridPane.columnSpan="2" GridPane.rowSpan="2"/>
        <TableView fx:id="markersTable" maxHeight="1.7976931348623157E308"
            maxWidth="1.7976931348623157E308" GridPane.columnIndex="2"/>
        <Label fx:id="noInternetLabel" alignment="CENTER"
            text="Internet connection is required to view the map" visible="false"
            GridPane.columnSpan="2" GridPane.halignment="CENTER"/>
        <GridPane maxWidth="1.7976931348623157E308" GridPane.columnSpan="2" GridPane.rowIndex="2">
            <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="ALWAYS"/>
                <ColumnConstraints halignment="CENTER" hgrow="ALWAYS"/>
                <ColumnConstraints halignment="CENTER" hgrow="ALWAYS"/>
                <ColumnConstraints halignment="CENTER" hgrow="ALWAYS"/>
                <ColumnConstraints halignment="CENTER" hgrow="ALWAYS"/>
                <ColumnConstraints halignment="CENTER" hgrow="ALWAYS"/>
                <ColumnConstraints halignment="CENTER" hgrow="ALWAYS"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="30.0"/>
            </rowConstraints>
            <GridPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </GridPane.margin>
            <Button fx:id="deleteHospitalButton" maxWidth="1.7976931348623157E308"
                onAction="#handleDeleteHospital" text="Delete Hospital"
                GridPane.columnIndex="6">
                <GridPane.margin>
                    <Insets left="5.0"/>
                </GridPane.margin>
            </Button>
            <Button fx:id="editHospitalButton" maxWidth="1.7976931348623157E308"
                onAction="#handleEditHospital" text="Edit Hospital" GridPane.columnIndex="5">
                <GridPane.margin>
                    <Insets left="5.0" right="5.0"/>
                </GridPane.margin>
            </Button>
            <Button fx:id="addHospitalButton" maxWidth="1.7976931348623157E308"
                onAction="#handleAddHospital" text="Add Hospital" GridPane.columnIndex="4"
                GridPane.rowSpan="1">
                <GridPane.margin>
                    <Insets left="5.0" right="5.0"/>
                </GridPane.margin>
            </Button>
            <Button fx:id="helpButton" maxWidth="1.7976931348623157E308"
                onAction="#handleShowHelp" text="Help" GridPane.columnIndex="3">
                <GridPane.margin>
                    <Insets left="5.0" right="5.0"/>
                </GridPane.margin>
            </Button>
            <Button fx:id="findClosestHospitalBtn" maxWidth="1.7976931348623157E308"
                onAction="#handleShowClosestHospital" text="Find nearest hospital"
                GridPane.columnIndex="2">
                <GridPane.margin>
                    <Insets left="5.0" right="5.0"/>
                </GridPane.margin>
            </Button>
            <ComboBox fx:id="travelMethod" maxWidth="1.7976931348623157E308"
                onAction="#handleTravelMethodToggled" promptText="Travel method"
                GridPane.columnIndex="1">
                <GridPane.margin>
                    <Insets left="5.0" right="5.0"/>
                </GridPane.margin>
            </ComboBox>
            <Button fx:id="clearRoutesButton" maxWidth="1.7976931348623157E308"
                onAction="#handleClearRoutesButtonClicked" text="Clear">
                <GridPane.margin>
                    <Insets right="5.0"/>
                </GridPane.margin>
            </Button>
        </GridPane>
    </GridPane>
</AnchorPane>
