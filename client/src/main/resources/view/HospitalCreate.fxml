<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane prefHeight="450.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/8.0.162-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="odms.view.user.HospitalCreate">
   <GridPane AnchorPane.bottomAnchor="-1.0" AnchorPane.leftAnchor="-1.0" AnchorPane.rightAnchor="-1.0"
             AnchorPane.topAnchor="-1.0">
      <columnConstraints>
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
      </columnConstraints>
      <rowConstraints>
         <RowConstraints minHeight="10.0" prefHeight="100.0" vgrow="NEVER"/>
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
      </rowConstraints>
      <GridPane GridPane.rowIndex="1">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
         </columnConstraints>
         <rowConstraints>
            <RowConstraints vgrow="NEVER"/>
            <RowConstraints vgrow="NEVER"/>
            <RowConstraints vgrow="NEVER"/>
            <RowConstraints vgrow="SOMETIMES"/>
            <RowConstraints vgrow="NEVER"/>
         </rowConstraints>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
         </padding>
         <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                 mnemonicParsing="false" onAction="#handleAddButtonClicked" text="Add" GridPane.rowIndex="4">
            <GridPane.margin>
               <Insets/>
            </GridPane.margin>
         </Button>
         <TextField fx:id="nameField" promptText="Hospital Name">
            <GridPane.margin>
               <Insets bottom="5.0" top="5.0"/>
            </GridPane.margin>
         </TextField>
         <TextField fx:id="addressField" promptText="Address" GridPane.rowIndex="1">
            <GridPane.margin>
               <Insets bottom="5.0" top="5.0"/>
            </GridPane.margin>
         </TextField>
         <Label fx:id="warningServerLabel" text="Server Error" textFill="RED" visible="false"
                GridPane.halignment="RIGHT" GridPane.rowIndex="2">
            <GridPane.margin>
               <Insets right="8.0"/>
            </GridPane.margin>
         </Label>
         <Label text="Organ Transplant Programs" GridPane.rowIndex="2">
            <GridPane.margin>
               <Insets left="8.0"/>
            </GridPane.margin>
            <padding>
               <Insets bottom="5.0" top="5.0"/>
            </padding>
         </Label>
         <Label fx:id="warningAddressLabel" text="Invalid Address" textFill="RED" visible="false"
                GridPane.halignment="RIGHT" GridPane.rowIndex="2">
            <GridPane.margin>
               <Insets right="8.0"/>
            </GridPane.margin>
         </Label>
         <ListView fx:id="programList" GridPane.rowIndex="3">
            <GridPane.margin>
               <Insets bottom="5.0" top="5.0"/>
            </GridPane.margin>
         </ListView>
         <Label fx:id="warningLabel" text="Invalid Details" textFill="RED" visible="false"
                GridPane.halignment="RIGHT" GridPane.rowIndex="2">
            <GridPane.margin>
               <Insets right="8.0"/>
            </GridPane.margin>
         </Label>
      </GridPane>
      <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" stylesheets="@../styles/Common.css"
             text="Hospital Details" GridPane.halignment="CENTER">
         <styleClass>
            <String fx:value="banner"/>
            <String fx:value="banner-default"/>
         </styleClass>
      </Label>
   </GridPane>
</AnchorPane>
